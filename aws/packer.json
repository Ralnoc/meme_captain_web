{
  "builders": [
    {
      "ami_name": "memecaptain-{{timestamp}}",
      "associate_public_ip_address": true,
      "instance_type": "m4.large",
      "region": "us-east-1",
      "source_ami": "ami-1ecae776",
      "spot_price": "0.03",
      "ssh_pty": true,
      "ssh_username": "ec2-user",
      "subnet_id": "subnet-c7219bec",
      "type": "amazon-ebs",
      "vpc_id": "vpc-732e0c16"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "sudo mkdir /fonts",
        "sudo chown ec2-user:ec2-user /fonts"
      ],
      "type": "shell"
    },
    {
      "destination": "/fonts",
      "source": "fonts/",
      "type": "file"
    },
    {
      "inline": [
        "sudo yum update -y",
        "sudo sed --in-place=.bak --expression='s/repo_upgrade: security/repo_upgrade: none/g' /etc/cloud/cloud.cfg",
        "sudo yum install -y docker git",
        "sudo service docker start",
        "git clone --branch deploy --depth 1 https://github.com/mmb/meme_captain_web.git",
        "pushd meme_captain_web",
        "sudo docker build --rm=true --tag=meme_captain .",
        "popd",
        "rm -rf meme_captain_web",
        "cat << EOF > startup",
        "docker run \\",
        "  --name meme_captain \\",
        "  --env-file=/env \\",
        "  --privileged=true \\",
        "  -d \\",
        "  -p 80:6081 \\",
        "  -v /database.yml:/app/config/database.yml \\",
        "  -v /fonts:/app/fonts \\",
        "  meme_captain",
        "EOF",
        "sudo mv startup /startup"
      ],
      "type": "shell"
    }
  ]
}
