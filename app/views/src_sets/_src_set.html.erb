<%= link_to :controller => :src_sets, :action => :show, :id => src_set.name do %>

    <% if src_set.thumbnail %>
        <%= image_tag(url_for(src_set.thumbnail), size: src_set.thumbnail.dimensions, alt: src_set.name) %>
    <% else %>
        <div class="empty-set">&#x2205;</div>
    <% end %>
<% end %>

<p class="src-set-name">
  <%= src_set.name %>
</p>
