<!DOCTYPE html>
<html>
<head>
  <title>Meme Captain meme generator</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <img id="logo" src="data:image/png;base64," alt="Meme Captain" width="460" height="50" />

    <p>
      <% if current_user %>
      <%= link_to "Logout #{current_user.email}", session_path, :method => :delete %>
      <% else %>
      <%= link_to "Login", new_session_path %>
      |
      <%= link_to "Register", new_user_path %>
      <% end %>
    </p>

    <% if flash[:error] -%>
    <div class="alert alert-error">
      <%=h flash[:error] %>
    </div>
    <% end -%>

    <% if flash[:notice] -%>
    <div class="alert alert-info">
      <%=h flash[:notice] %>
    </div>
    <% end -%>

    <%= yield %>

  </div>

<%= javascript_include_tag "application" %>

</body>
</html>
