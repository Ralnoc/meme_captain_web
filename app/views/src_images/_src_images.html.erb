<div class="thumb-index well">

  <div class="btn-toolbar">

    <div class="btn-group">
      <%= link_to 'New', {:controller => :src_images, :action => :new}, :class => 'btn btn-success' %>
    </div>

    <div class="btn-group">

      <div class="input-prepend">
        <button class="btn add-to-set disabled disable-none-selected enable-some-selected">
          Add <span class="selected-count badge badge-info">0</span> to Set
        </button>
        <input id="add-to-set-name" type="text"/>
      </div>

    </div>

    <div class="btn-group">
      <button class="btn select-all">Select All</button>
      <button class="btn select-none disabled disable-none-selected enable-some-selected">Select None</button>
    </div>

    <div class="btn-group">
      <button class="btn disabled disable-none-selected enable-some-selected">
        Delete <span class="selected-count badge badge-info">0</span>
      </button>
    </div>

  </div>

  <ul class="thumbnails">
    <% @src_images.each do |si| %>
        <li>
          <div class="thumbnail">
            <%= render :partial => si %>
          </div>
        </li>
    <% end %>
  </ul>

</div>
